<%- layout('layouts/boilerplate') %>

<h1 class="text-center">CAMPGROUND SHOW PAGE</h1>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card-body">
      <img src="<%= campground.image%> " class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item">$<%= campground.price %> per night</li>
      </ul>
      <div class="card-body mb-3">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%= campground._id %>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-danger">Delete</button>
          <a class="btn btn-dark" href="/campgrounds">All Campgrounds</a>
          <a class="btn btn-secondary" href="/campgrounds/new"
            >Add a new Campground</a
          >
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
      <h2>Leave A Review</h2>
      <!-- this mb-3 gets us off the footeer -->
      <form
        action="/campgrounds/<%=campground._id%>/reviews"
        method="post"
        class="mb-3 validated-form"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div>
          <button class="btn btn-success">Submit</button>
        </div>
        <div></div>
      </form>
      <% for(let review of campground.reviews) {%>
      <div class="mb-3">
        <p>Rating: <%= review.rating %></p>
        <p>Review: <%= review.body %></p>
      </div>
      <%} %>
    </div>
  </div>
</div>
